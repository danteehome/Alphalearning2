<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_animation"
    android:id="@+id/navigation">

    <ImageView
        android:id="@+id/toListbtn"
        android:layout_width="119dp"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="245dp"
        app:srcCompat="@drawable/ballon" />

    <ImageView
        android:id="@+id/toStudybtn"
        android:layout_width="114dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="138dp"
        app:srcCompat="@drawable/ballon" />

    <ImageView
        android:id="@+id/toDrawbtn"
        android:layout_width="126dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="242dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/ballon" />


    <ImageView
        android:id="@+id/toTestbtn"
        android:layout_width="116dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="325dp"
        app:srcCompat="@drawable/ballon" />

    <TextView
        android:id="@+id/toTest"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="161dp"
        android:textColor="@color/yellow_500"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Test" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="349dp"
        android:textColor="@color/yellow_500"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Study" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="266dp"
        android:layout_marginBottom="451dp"
        android:textColor="@color/yellow_500"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Draw" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="228dp"
        android:layout_marginBottom="235dp"
        android:textColor="@color/yellow_500"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Alphabet" />

    <ImageView
        android:id="@+id/music_control"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/smallmelody" />


</RelativeLayout>