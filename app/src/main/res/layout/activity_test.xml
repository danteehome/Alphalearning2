<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/test">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <WebView
            android:id="@+id/qbackground"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </WebView>
    </LinearLayout>



    <ImageView
        android:id="@+id/timage"
        android:layout_width="238dp"
        android:layout_height="222dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@color/lime_100"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Choose the correct answer!"
        android:textColor="@color/amber_900"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tmissing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@color/lime_100"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textColor="@color/amber_900"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/option1"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="141dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/option2"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="141dp"
        android:layout_toEndOf="@+id/option1" />

    <Button
        android:id="@+id/option3"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="141dp"
        android:layout_toEndOf="@+id/option2" />
    <Button
        android:id="@+id/option4"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="425dp"
         />
    <Button
        android:id="@+id/option5"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="191dp"
        android:layout_marginTop="425dp"
        android:layout_toEndOf="@+id/option4" />


</RelativeLayout>